{
    "version": 2,
    "builds": [
      {
        "src": "backend/backend/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "50mb" }
      },
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/backend/wsgi.py"
      },
      {
        "src": "/(.*)",
        "dest": "/src/$1"
      }
    ],
    "env": {
      "DJANGO_SECRET_KEY": "process.env.SECRET_KEY",
      "DATABASE_URL": "process.env.DB_HOST",
      "REACT_APP_API_URL": "http://127.0.0.1:8000/api"
    }
  }